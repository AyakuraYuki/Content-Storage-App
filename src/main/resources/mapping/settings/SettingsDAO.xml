<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ayakurayuki.contentstorage.module.settings.dao.SettingsDAO">

  <select id="get" parameterType="java.lang.String"
          resultType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    SELECT *
    FROM settings a
    WHERE a.id = #{id};
  </select>

  <select id="list" resultType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    SELECT *
    FROM settings a;
  </select>

  <select id="search" parameterType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings"
          resultType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    SELECT *
    FROM settings a
    WHERE a.`key` LIKE '%' || #{key} || '%';
  </select>

  <insert id="insert" parameterType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    INSERT INTO settings (
      id, `key`, value
    )
    VALUES (
      #{id}, #{key}, #{value}
    );
  </insert>

  <update id="update" parameterType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    UPDATE settings
    SET
      `key` = #{key},
      value = #{value}
    WHERE id = #{id};
  </update>

  <delete id="delete" parameterType="cc.ayakurayuki.contentstorage.module.settings.entity.Settings">
    DELETE FROM settings
    WHERE id = #{id};
  </delete>

</mapper>