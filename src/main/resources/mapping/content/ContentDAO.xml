<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ayakurayuki.contentstorage.module.content.dao.ContentDAO">

  <select id="get"
          parameterType="java.lang.String"
          resultType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    SELECT *
    FROM content a
    WHERE id = #{id};
  </select>

  <select id="list" resultType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    SELECT *
    FROM content a
    ORDER BY a.item
      ASC;
  </select>

  <select id="search"
          parameterType="cc.ayakurayuki.contentstorage.module.content.entity.Content"
          resultType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    SELECT *
    FROM content a
    WHERE a.item LIKE '%' || #{item} || '%'
    ORDER BY a.item
      ASC;
  </select>

  <insert id="insert" parameterType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    INSERT INTO content (
      id, item, json_data
    )
    VALUES (
      #{id}, #{item}, #{json_data}
    );
  </insert>

  <update id="update" parameterType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    UPDATE content
    <set>
      <if test="item != null">
        item = #{item},
      </if>
      <if test="json_data != null">
        json_data = #{json_data}
      </if>
    </set>
    WHERE id = #{id};
  </update>

  <delete id="delete" parameterType="cc.ayakurayuki.contentstorage.module.content.entity.Content">
    DELETE FROM content
    WHERE id = #{id};
  </delete>

</mapper>