    <insert id="insert" parameterType="cc.ayakurayuki.contentstorage.entity.Content">
        insert into content (id, item, json_data)
        values (#{id}, #{item}, #{json_data})
    </insert>

    <update id="update" parameterType="cc.ayakurayuki.contentstorage.entity.Content">
        update content set
        item = #{item},
        json_data = #{json_data}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="cc.ayakurayuki.contentstorage.entity.Content">
        delete from content
        where id = #{id}
    </delete>

</mapper>