<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ayakurayuki.contentstorage.dao.ContentDao">

    <sql id="columns">
        a.id as "id",
        a.item as "item",
        a.json_data as "json_data"
    </sql>

    <resultMap id="accountResultMap" type="cc.ayakurayuki.contentstorage.entity.Content">
        <id property="id" column="id"/>
        <result property="item" column="item"/>
        <result property="json_data" column="json_data"/>
    </resultMap>

    <select id="get" parameterType="java.lang.String" resultMap="accountResultMap">
        select
        <include refid="columns"/>
        from content a
        where id = #{id}
    </select>

    <!-- MySQL -->
    <select id="codexList" resultMap="accountResultMap">
        select
        <include refid="columns"/>
        from content a
        order by convert(a.item using gbk) asc
    </select>

    <select id="search" parameterType="cc.ayakurayuki.contentstorage.entity.Content" resultMap="accountResultMap">
        select
        <include refid="columns"/>
        from content a
        where a.item like concat('%', #{item}, '%')
        order by convert(a.item using gbk) asc
    </select>

